---
import Layout from '../layouts/Layout.astro';
import ContactForm from '@/components/ContactForm.tsx';

const pageTitle = "Contact Us - English Friendly Korea";
---

<Layout title={pageTitle}>
  <div class="container py-8">
    <header class="mb-12 text-center">
      <h1 class="text-4xl font-bold">Get In Touch</h1>
      <p class="mt-4 text-lg text-muted-foreground">
        Have questions, suggestions, or want to report an issue? We'd love to hear from you!
      </p>
    </header>

    <section id="contact-info" class="mb-12 text-center">
      <h2 class="text-2xl font-semibold mb-4">Our Email</h2>
      <p class="text-lg">
        For general inquiries, please reach out to us at: 
        <a href="mailto:info@englishfriendlykorea.com" class="text-primary hover:underline">
          info@englishfriendlykorea.com
        </a>
      </p>
      <p class="mt-2 text-muted-foreground">
        (Please note: This is a placeholder email address for now.)
      </p>
    </section>

    <hr class="my-12 border-border" />

    <section id="contact-form-section">
      <h2 class="text-2xl font-semibold mb-6 text-center">Send Us a Message</h2>
      <ContactForm client:load />
    </section>

  </div>
</Layout> 