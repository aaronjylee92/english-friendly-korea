---
export interface Props {
	title: string;
}

const { title = 'English Friendly Korea' } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen">
		<header class="py-4 border-b border-border sticky top-0 z-50 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
			<div class="container mx-auto flex justify-between items-center">
				<a href="/" class="text-xl font-bold hover:text-primary transition-colors">English Friendly Korea</a>
				<nav>
					<ul class="flex space-x-4">
						<li><a href="/about" class="text-muted-foreground hover:text-primary transition-colors">About Us</a></li>
						<li><a href="/contact" class="text-muted-foreground hover:text-primary transition-colors">Contact</a></li>
						<li><a href="/submit-listing" class="text-muted-foreground hover:text-primary transition-colors">Submit Listing</a></li>
					</ul>
				</nav>
			</div>
		</header>
		<main class="flex-grow">
		  <slot />
		</main>
    <footer class="py-6 border-t border-border mt-auto">
      <div class="container mx-auto text-center text-sm text-muted-foreground">
        &copy; {new Date().getFullYear()} English Friendly Korea. All rights reserved.
      </div>
    </footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		/* width: 100%; // Handled by Tailwind flex */
		/* height: 100%; // Handled by Tailwind flex */
	}
</style>
